# 服务端口
PORT=8888

# 日志配置
LOG_STORAGE_LOCATION=./logs/
LOG_ROTATION_TIME=24
LOG_REMAIN_ROTATION_COUNT=2
LOG_REMAIN_LOG_LEVEL=6
LOG_IS_STDOUT=true
LOG_IS_JSON=false

# SQLite 配置
SQLITE_DB_PATH=./data/flow_test.db
SQLITE_MAX_OPEN_CONNS=1
SQLITE_MAX_IDLE_CONNS=1
SQLITE_MAX_LIFETIME=3600
SQLITE_LOG_LEVEL=info

# 文件配置
FILE_MAX_FILE_SIZE=52428800
FILE_UPLOAD_DIR=./uploads
FILE_OUTPUT_DIR=./outputs

# Langflow 配置
LANGFLOW_BASE_URL=http://localhost:7860
LANGFLOW_FLOW_RUN_ENDPOINT=/api/v1/run/
LANGFLOW_FILE_ENDPOINT=/api/v2/files/
LANGFLOW_API_KEY=your-langflow-api-key-here
LANGFLOW_FLOW_ID=your-langflow-flow-id-here
LANGFLOW_FILE_COMPONENT_ID=File-XXXXX
LANGFLOW_SAVE_FILE_COMPONENT_ID=SaveToFile-XXXXX
LANGFLOW_PROMPT_COMPONENT_ID=Prompt-XXXXX
